generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
//model for Todo items
model Todo {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  owner    String
  task     String
}
//model for owner
model Owner{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
}
